<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_open_shop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bharathacks.com.bharatproviders.OpenShop">

    <LinearLayout
        android:id="@+id/o_detslayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#069c88"
            android:gravity="center"
            android:text="Open Shutter"
            android:textColor="#fff"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/o_shopid"
            android:hint="Shop id"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"/>
        <EditText
            android:id="@+id/o_password"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"/>

        <Button
            android:id="@+id/o_login"
            android:text="Open Shutter!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"/>
        <Button
            android:id="@+id/o_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New to this market? Create shop!!"
            android:background="@null"/>

    </LinearLayout>

</RelativeLayout>
